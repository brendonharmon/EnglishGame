:root{--bg:#0f1724;--card:#0b1220;--accent:#7dd3fc;--muted:#94a3b8;--glass:rgba(255,255,255,0.04)}*{box-sizing:border-box}body{font-family:Inter,ui-sans-serif,system-ui,-apple-system,"Segoe UI",Roboto,"Helvetica Neue",Arial;background:linear-gradient(180deg,#071027 0%, #071a2a 100%);color:#e6eef6;margin:0;padding:24px}header{margin-bottom:18px}h1{margin:0;font-size:20px}.subtitle{color:var(--muted);margin-top:6px}main.container{display:flex;gap:18px}section.game-area{flex:1;background:var(--card);padding:18px;border-radius:10px;min-height:380px}aside.sidebar{width:320px;background:var(--glass);padding:16px;border-radius:10px;color:#e6eef6}.semester{font-weight:700;margin-bottom:8px}.scenario{background:#06202b;padding:12px;border-radius:8px;margin-bottom:12px;color:var(--accent)}.options{display:flex;flex-direction:column;gap:10px}.option{background:#081422;padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.03);cursor:pointer;transition:transform .12s,box-shadow .12s}.option:hover{transform:translateY(-3px);box-shadow:0 6px 18px rgba(0,0,0,0.5)}.controls{margin-top:14px;display:flex;gap:8px}button{background:var(--accent);border:none;padding:8px 12px;border-radius:6px;color:#012;cursor:pointer}button[disabled]{opacity:.5;cursor:not-allowed}.resume-preview h2{margin-top:0}.skills-list{display:grid;grid-template-columns:1fr 1fr;gap:6px;margin-bottom:8px}.skill-bar{background:rgba(255,255,255,0.06);padding:6px;border-radius:6px;font-size:13px}.experience-item{font-size:13px;margin-bottom:6px}.final-outcome{margin-top:12px;padding:10px;border-radius:8px;background:linear-gradient(90deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));min-height:40px}
/* Menu button and overlays */
/* End-game outcome box shown in the left game area */
.end-outcome{margin-top:12px;padding:12px;border-radius:10px;background:linear-gradient(90deg, rgba(125,211,252,0.06), rgba(255,255,255,0.02));border:1px solid rgba(125,211,252,0.08);color:#dff6ff;min-height:56px}
.menu-btn{position:absolute;right:28px;top:22px;background:transparent;color:var(--accent);border:1px solid rgba(255,255,255,0.04);padding:6px 10px;border-radius:6px}
.start-overlay, .menu-overlay{backdrop-filter:blur(4px)}
.menu-overlay button{width:100%;text-align:left;padding:12px;font-size:16px}

/* Overlay panel used by both the start and menu screens */
.overlay-panel{background:rgba(6,10,18,0.96);padding:28px;border-radius:14px;color:#e6eef6;min-width:420px;width:min(760px,90%);box-shadow:0 12px 40px rgba(2,6,12,0.6);}
.overlay-panel h2, .overlay-panel h3{margin-top:0;font-size:20px}
.overlay-panel p{font-size:16px;color:var(--muted)}
.overlay-panel label{font-size:15px}
.overlay-panel button{background:var(--accent);border:none;color:#012;padding:10px 14px;border-radius:8px;cursor:pointer}
.overlay-panel .controls-row{display:flex;gap:10px;justify-content:flex-end;margin-top:12px}
.menu-btn{font-size:16px;padding:8px 12px}
.overlay-panel .hint{margin-top:10px;color:var(--muted);font-size:14px}
.overlay-panel kbd{background:rgba(255,255,255,0.06);padding:2px 6px;border-radius:4px;border:1px solid rgba(255,255,255,0.03);font-family:ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Courier New", monospace}
@media (max-width:900px){main.container{flex-direction:column}aside.sidebar{width:100%}}
